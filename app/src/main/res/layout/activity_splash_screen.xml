<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".UIclasses.SplashScreen">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:src="@drawable/nasa_logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_nasa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sky At A Glance"
        android:textColor="#fff"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/amaranth_bold"
        android:layout_marginTop="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_nasa"
        android:text="Get ready to witness the sea of tranquility"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:fontFamily="@font/amaranth"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/iv_nasa"
        app:lottie_rawRes="@raw/rocket"
        app:lottie_loop="false"
        app:lottie_autoPlay="true"/>


</RelativeLayout>